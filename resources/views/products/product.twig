{% extends 'templates/app.twig' %}

{% block content %}
  <div class="row">
      <div class="col-md-4">
        <img style="float:right;" class="thumbnail img-responsive" src="data:image/svg+xml;base64," alt="...">
        <div class="col-md-12">
          <div style="float:right;">
            <h4 class="caption">Rp.{{ product.purchase }},-</h4>
            {% if Product.inStock(product.id) %}
              <a href="{{ path_for('cart.add', {id: product.id, qty: 1}) }}" class="btn btn-default btn-sm">Add to cart</a>
            {% endif %}
          </div>
        </div>
      </div>
      <div class="col-md-6">
        {% if Product.hasLowStock(product.id) %}
          <span class="label label-warning">Low Stock ({{ product.stock }})</span>
        {% endif %}

        {% if Product.outOfStock(product.id) %}
          <span class="label label-danger">Out of Stock ({{ product.stock }})</span>
        {% endif %}

        {% if Product.inStock(product.id) %}
          <span class="label label-success">in Stock ({{ product.stock }})</span>
        {% endif %}

        <h3>{{ product.name }}</h3>
        <p>{{ product.description | raw }}</p>

      </div>
  </div>
{% endblock %}
